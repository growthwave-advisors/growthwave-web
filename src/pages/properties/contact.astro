---
/**
 * GrowthWave Properties - Contact Page
 * =====================================
 * Updated: January 2026
 * 
 * Design System Compliance:
 * - Two-layer "Fixed Island" pattern on all sections
 * - Typography stops at lg breakpoint (no xl: or 2xl:)
 * - Responsive padding: px-4 lg:px-8
 * - Body content: max-w-7xl (1280px)
 * 
 * Interactive Elements:
 * - ContactForm.tsx - Smart form with conditional fields
 * - TimelineTabs.tsx - Investment vs Property Submission process
 * - FaqAccordion.tsx - Expandable FAQ section
 * 
 * @see Website_Design_System_STRATEGY.md
 * @see GrowthWave_Properties_Website_Copy_MASTER.md
 * @see contact-page-wireframe.jsx
 */
import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import Button from '@components/Button.astro';
import ContactForm from '@components/properties/ContactForm';
import TimelineTabs from '@components/properties/TimelineTabs';
import FaqAccordion from '@components/properties/FaqAccordion';

// Brand Colors
const colors = {
  coral: '#FF6B4A',
  coralLight: '#ff8a6b',
  coralBg: 'rgba(255,107,74,0.15)',
  coralBgLight: 'rgba(255,107,74,0.08)',
  ocean: '#265077',
  oceanBg: 'rgba(38,80,119,0.12)',
  midnight: '#022140',
  cyan: '#51A7F8',
  cyanBg: 'rgba(81,167,248,0.12)',
  purple: '#7C3AED',
  green: '#10B981',
  gray50: '#f9fafb',
  gray100: '#f3f4f6',
  gray200: '#e5e7eb',
  gray300: '#d1d5db',
  gray400: '#9ca3af',
  gray500: '#6b7280',
  gray600: '#4b5563',
  gray700: '#374151',
  gray800: '#1f2937',
};

// FAQ Data
const faqs = [
  {
    question: 'What is an accredited investor?',
    answer: 'An accredited investor must meet one of the following criteria: (1) Annual income of $200,000+ individually ($300,000+ joint with spouse) for the past two years with reasonable expectation of the same in the current year, (2) Net worth exceeding $1,000,000 (excluding primary residence), or (3) Valid Series 7, 65, or 82 license.'
  },
  {
    question: 'Do I need to be an accredited investor to work with you?',
    answer: "While many of our investment opportunities are structured for accredited investors, we're always happy to discuss your situation. We also offer resources and guidance through our related services at Credit Sculpt and GrowthWave Capital to help you build toward your investment goals."
  },
  {
    question: "I'm a broker. How do I submit a property?",
    answer: 'We welcome broker submissions! Please use the contact form above and select "Property Submission" as your inquiry type. We need: property address, unit count, financials (T12 and rent roll), asking price, and brief description of the value-add opportunity.'
  },
  {
    question: 'Can I visit your properties?',
    answer: 'Absolutely! We encourage potential partners to visit properties during due diligence. We can coordinate tours with our property management teams in each market.'
  },
  {
    question: 'How long does it take to get investment materials?',
    answer: 'Qualified accredited investors typically receive detailed property analysis and offering documents within 48 hours of our initial consultation.'
  },
];

// Resources Data
const resources = [
  { 
    title: 'Investment Approach', 
    href: '/approach', 
    desc: 'Learn about our strategy and process',
    icon: 'search'
  },
  { 
    title: 'About Us', 
    href: '/about', 
    desc: 'Understand our background and principles',
    icon: 'users'
  },
  { 
    title: 'Join Investor List', 
    href: '#investor-list', 
    desc: 'Get updates without committing to a call',
    icon: 'mail'
  },
];
---

<BaseLayout
  brand="properties"
  title="Contact GrowthWave Properties | Investment Opportunities"
  description="Connect with GrowthWave Properties to discuss multifamily investment opportunities, partnership inquiries, or property submissions. Schedule a consultation today."
>
  <Header brand="properties" activePage="Contact" />

  <main>
    <!-- ============================================
         SECTION 1: HERO
         - Dark gradient background (full-width)
         - Radial gradient overlays for depth
         ============================================ -->
    <section 
      class="w-full relative overflow-hidden"
      style={`background-color: ${colors.midnight};`}
    >
      <!-- Gradient overlays -->
      <div 
        class="absolute inset-0 opacity-30 pointer-events-none"
        style={`background: radial-gradient(ellipse at 30% 20%, ${colors.ocean}40 0%, transparent 50%),
                           radial-gradient(ellipse at 70% 80%, ${colors.coral}20 0%, transparent 50%);`}
      ></div>
      
      <div class="max-w-7xl mx-auto px-4 lg:px-8 py-16 lg:py-20 relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <!-- Badge -->
          <div 
            class="inline-block px-3 py-1 rounded-full text-xs lg:text-sm font-semibold tracking-wider uppercase mb-4"
            style={`background-color: ${colors.coralBg}; color: ${colors.coral};`}
          >
            Connect With Us
          </div>
          
          <!-- Headline -->
          <h1 class="text-3xl lg:text-5xl font-bold text-white leading-tight mb-4">
            Let's Start a Conversation
          </h1>
          
          <!-- Subheadline -->
          <p class="text-base lg:text-xl text-gray-300 max-w-2xl mx-auto">
            Whether you're interested in investment opportunities, have a property to present, 
            or want to learn more about our approach, we're here to help.
          </p>
        </div>
      </div>
    </section>

    <!-- ============================================
         SECTION 2: CONTACT METHODS
         - Two-column layout: Schedule Call + Form
         - Light gray background
         ============================================ -->
    <section class="w-full" style={`background-color: ${colors.gray50};`}>
      <div class="max-w-7xl mx-auto px-4 lg:px-8 py-12 lg:py-20">
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          
          <!-- LEFT: Schedule a Call -->
          <div class="bg-white rounded-2xl p-6 lg:p-8 shadow-sm border border-gray-100">
            <!-- Icon -->
            <div 
              class="w-14 h-14 rounded-xl flex items-center justify-center mb-6"
              style={`background-color: ${colors.coralBg};`}
            >
              <svg 
                class="w-7 h-7" 
                fill="none" 
                stroke="currentColor" 
                stroke-width="1.5" 
                viewBox="0 0 24 24"
                style={`color: ${colors.coral};`}
              >
                <rect x="3" y="4" width="18" height="18" rx="2" />
                <path d="M16 2v4M8 2v4M3 10h18M8 14h.01M12 14h.01M16 14h.01M8 18h.01M12 18h.01M16 18h.01" />
              </svg>
            </div>
            
            <h2 
              class="text-xl lg:text-2xl font-bold mb-3"
              style={`color: ${colors.midnight};`}
            >
              Schedule a Consultation
            </h2>
            <p 
              class="text-base lg:text-lg mb-6"
              style={`color: ${colors.gray600};`}
            >
              The fastest way to connect is to schedule a call directly on our calendar. 
              30-minute consultations available weekdays.
            </p>
            
            <!-- Calendly Placeholder -->
            <div 
              class="rounded-xl p-8 lg:p-12 text-center border-2 border-dashed mb-6"
              style={`border-color: ${colors.gray300}; background-color: ${colors.gray50};`}
            >
              <svg 
                class="w-12 h-12 mx-auto mb-3" 
                fill="none" 
                stroke="currentColor" 
                stroke-width="1" 
                viewBox="0 0 24 24"
                style={`color: ${colors.gray400};`}
              >
                <rect x="3" y="4" width="18" height="18" rx="2" />
                <path d="M16 2v4M8 2v4M3 10h18" />
              </svg>
              <p 
                class="text-sm font-medium mb-1"
                style={`color: ${colors.gray500};`}
              >
                Calendly Embed
              </p>
              <p 
                class="text-xs"
                style={`color: ${colors.gray400};`}
              >
                Integration with scheduling tool
              </p>
            </div>
            
            <Button brand="properties" href="https://calendly.com" size="lg" class="w-full justify-center" external>
              Schedule a Call
            </Button>
            
            <p 
              class="text-xs lg:text-sm text-center mt-4"
              style={`color: ${colors.gray500};`}
            >
              We'll discuss your investment goals and current opportunities
            </p>
          </div>
          
          <!-- RIGHT: Contact Form (React Component) -->
          <div class="bg-white rounded-2xl p-6 lg:p-8 shadow-sm border border-gray-100">
            <!-- Icon -->
            <div 
              class="w-14 h-14 rounded-xl flex items-center justify-center mb-6"
              style={`background-color: ${colors.oceanBg};`}
            >
              <svg 
                class="w-7 h-7" 
                fill="none" 
                stroke="currentColor" 
                stroke-width="1.5" 
                viewBox="0 0 24 24"
                style={`color: ${colors.ocean};`}
              >
                <rect x="2" y="4" width="20" height="16" rx="2" />
                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
              </svg>
            </div>
            
            <h2 
              class="text-xl lg:text-2xl font-bold mb-3"
              style={`color: ${colors.midnight};`}
            >
              Send Us a Message
            </h2>
            <p 
              class="text-base lg:text-lg mb-6"
              style={`color: ${colors.gray600};`}
            >
              Prefer to reach out via form? Fill out the details below and 
              we'll respond within one business day.
            </p>
            
            <!-- Interactive Contact Form -->
            <ContactForm client:load />
          </div>
        </div>
        
        <!-- Direct Contact Info -->
        <div class="mt-10 flex flex-wrap justify-center gap-6 lg:gap-10 text-sm lg:text-base">
          <div class="flex items-center gap-2">
            <svg 
              class="w-5 h-5" 
              fill="none" 
              stroke="currentColor" 
              stroke-width="2" 
              viewBox="0 0 24 24"
              style={`color: ${colors.coral};`}
            >
              <rect x="2" y="4" width="20" height="16" rx="2" />
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
            </svg>
            <a 
              href="mailto:investments@growthwaveproperties.com" 
              class="hover:underline"
              style={`color: ${colors.ocean};`}
            >
              investments@growthwaveproperties.com
            </a>
          </div>
          <div class="flex items-center gap-2">
            <svg 
              class="w-5 h-5" 
              fill="none" 
              stroke="currentColor" 
              stroke-width="2" 
              viewBox="0 0 24 24"
              style={`color: ${colors.coral};`}
            >
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
              <circle cx="12" cy="10" r="3" />
            </svg>
            <span style={`color: ${colors.gray600};`}>
              Orlando, FL | Active across the Midwest
            </span>
          </div>
          <div class="flex items-center gap-2">
            <svg 
              class="w-5 h-5" 
              fill="none" 
              stroke="currentColor" 
              stroke-width="2" 
              viewBox="0 0 24 24"
              style={`color: ${colors.coral};`}
            >
              <circle cx="12" cy="12" r="10" />
              <path d="M12 6v6l4 2" />
            </svg>
            <span style={`color: ${colors.gray600};`}>
              Response within 1 business day
            </span>
          </div>
        </div>
        
      </div>
    </section>

    <!-- ============================================
         SECTION 3: WHAT HAPPENS NEXT
         - Timeline with tabs
         - White background
         ============================================ -->
    <section class="w-full bg-white">
      <div class="max-w-7xl mx-auto px-4 lg:px-8 py-12 lg:py-20">
        
        <!-- Section Header -->
        <div class="text-center mb-10 lg:mb-12">
          <div 
            class="inline-block px-3 py-1 rounded-full text-xs lg:text-sm font-semibold tracking-wider uppercase mb-4"
            style={`background-color: ${colors.oceanBg}; color: ${colors.ocean};`}
          >
            Our Process
          </div>
          <h2 
            class="text-2xl lg:text-3xl font-bold mb-3"
            style={`color: ${colors.midnight};`}
          >
            What Happens Next
          </h2>
          <p 
            class="text-base lg:text-lg max-w-2xl mx-auto"
            style={`color: ${colors.gray600};`}
          >
            After you reach out, here's what you can expect based on your inquiry type.
          </p>
        </div>
        
        <!-- Interactive Timeline Tabs -->
        <TimelineTabs client:load />
        
      </div>
    </section>

    <!-- ============================================
         SECTION 4: FAQs
         - Dark navy background
         - Accordion-style Q&A
         ============================================ -->
    <section class="w-full" style={`background-color: ${colors.midnight};`}>
      <div class="max-w-4xl mx-auto px-4 lg:px-8 py-12 lg:py-20">
        
        <!-- Section Header -->
        <div class="text-center mb-10 lg:mb-12">
          <div 
            class="inline-block px-3 py-1 rounded-full text-xs lg:text-sm font-semibold tracking-wider uppercase mb-4"
            style={`background-color: ${colors.coralBg}; color: ${colors.coral};`}
          >
            Common Questions
          </div>
          <h2 class="text-2xl lg:text-3xl font-bold text-white mb-3">
            Before You Reach Out
          </h2>
          <p class="text-base lg:text-lg text-gray-300">
            Quick answers to questions we frequently receive.
          </p>
        </div>
        
        <!-- Interactive FAQ Accordion -->
        <FaqAccordion client:load faqs={faqs} />
        
      </div>
    </section>

    <!-- ============================================
         SECTION 5: RESOURCES
         - Light gray background
         - 3-column card layout
         ============================================ -->
    <section class="w-full" style={`background-color: ${colors.gray50};`}>
      <div class="max-w-7xl mx-auto px-4 lg:px-8 py-12 lg:py-20">
        
        <!-- Section Header -->
        <div class="text-center mb-10">
          <h2 
            class="text-xl lg:text-2xl font-bold mb-3"
            style={`color: ${colors.midnight};`}
          >
            Before Reaching Out
          </h2>
          <p 
            class="text-base lg:text-lg"
            style={`color: ${colors.gray600};`}
          >
            You may find these resources helpful
          </p>
        </div>
        
        <!-- Resource Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {resources.map((resource) => (
            <a
              href={resource.href}
              class="group p-6 rounded-xl bg-white border border-gray-100 hover:border-gray-200 hover:shadow-md transition-all"
            >
              <!-- Icon -->
              <div 
                class="w-12 h-12 rounded-lg flex items-center justify-center mb-4"
                style={`background-color: ${colors.oceanBg};`}
              >
                <svg 
                  class="w-6 h-6" 
                  fill="none" 
                  stroke="currentColor" 
                  stroke-width="2" 
                  viewBox="0 0 24 24"
                  style={`color: ${colors.ocean};`}
                >
                  {resource.icon === 'search' && <><circle cx="11" cy="11" r="8" /><path d="m21 21-4.35-4.35" /></>}
                  {resource.icon === 'users' && <><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" /><circle cx="9" cy="7" r="4" /><path d="M22 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75" /></>}
                  {resource.icon === 'mail' && <><rect x="2" y="4" width="20" height="16" rx="2" /><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" /></>}
                </svg>
              </div>
              
              <h3 
                class="font-bold mb-2 flex items-center gap-2"
                style={`color: ${colors.midnight};`}
              >
                {resource.title}
                <svg 
                  class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity" 
                  fill="none" 
                  stroke="currentColor" 
                  stroke-width="2" 
                  viewBox="0 0 24 24"
                  style={`color: ${colors.coral};`}
                >
                  <path d="M5 12h14m-7-7 7 7-7 7" />
                </svg>
              </h3>
              <p 
                class="text-sm lg:text-base"
                style={`color: ${colors.gray600};`}
              >
                {resource.desc}
              </p>
            </a>
          ))}
        </div>
        
      </div>
    </section>

    <!-- ============================================
         SECTION 6: CTA
         - Gradient background (ocean â†’ midnight)
         ============================================ -->
    <section 
      class="w-full relative overflow-hidden"
      style={`background: linear-gradient(135deg, ${colors.ocean} 0%, ${colors.midnight} 100%);`}
    >
      <div class="max-w-4xl mx-auto px-4 lg:px-8 py-16 lg:py-24 text-center relative z-10">
        <h2 class="text-2xl lg:text-4xl font-bold text-white mb-4">
          Ready to Build Wealth Through Real Estate?
        </h2>
        <p class="text-base lg:text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Join our investor list for notifications about new opportunities and market insights.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button brand="properties" href="#investor-list" size="lg" variant="secondary">
            Join Our Investor List
          </Button>
          <Button brand="properties" variant="outline" href="#schedule" size="lg">
            Schedule a Consultation
          </Button>
        </div>
      </div>
    </section>
  </main>

  <Footer brand="properties" />
</BaseLayout>
