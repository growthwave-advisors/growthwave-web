import BaseLayout from "@layouts/BaseLayout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
---

<BaseLayout brand="properties" title="Terms of Service | GrowthWave Properties" description="GrowthWave Properties terms of service — what you need to know before working with us.">
  <Header brand="properties" />

  <!-- Hero -->
  <section class="w-full" style="background: linear-gradient(135deg, #022140 0%, #265077 100%);">
    <div class="max-w-7xl mx-auto px-4 lg:px-8 py-16 lg:py-20">
      <p class="text-sm font-semibold uppercase tracking-widest mb-3" style="color: #FF6B4A;">Legal</p>
      <h1 class="text-3xl lg:text-4xl font-bold text-white mb-4">Terms of Service</h1>
      <p class="text-white/80 text-lg">Last updated: February 2026</p>
    </div>
  </section>

  <!-- Content -->
  <section class="w-full bg-white">
    <div class="max-w-7xl mx-auto px-4 lg:px-8 py-16 lg:py-20">
      <div class="max-w-3xl" style="color: #595959;">

        <p class="text-lg mb-8">
          GrowthWave Properties is a division of GrowthWave Advisors LLC. By using this website or engaging with our investment opportunities, you agree to the following terms.
        </p>

        <h2 class="text-xl font-bold mb-3" style="color: #265077;">Nature of Our Activities</h2>
        <p class="mb-6">
          GrowthWave Properties acquires, repositions, and manages value-add multifamily real estate. We work with accredited investors and retirement account holders on co-investment opportunities. Nothing on this website constitutes a public offering of securities.
        </p>

        <h2 class="text-xl font-bold mb-3" style="color: #265077;">No Guarantee of Returns</h2>
        <p class="mb-6">
          All real estate investment involves risk. Past performance does not guarantee future results. Projected returns discussed in any educational materials are illustrative only and not a promise of specific outcomes.
        </p>

        <h2 class="text-xl font-bold mb-3" style="color: #265077;">Informational Content</h2>
        <p class="mb-6">
          All content on this website — including guides, blog posts, and educational resources — is provided for informational purposes only. Nothing on this site constitutes financial, legal, tax, or investment advice. Consult qualified professionals before making investment decisions.
        </p>

        <h2 class="text-xl font-bold mb-3" style="color: #265077;">Intellectual Property</h2>
        <p class="mb-6">
          All content, branding, and materials on this site are the property of GrowthWave Advisors LLC. You may not reproduce, distribute, or create derivative works without our written permission.
        </p>

        <h2 class="text-xl font-bold mb-3" style="color: #265077;">Contact Us</h2>
        <p class="mb-4">
          Questions about these terms? Reach us at <a href="mailto:info@growthwaveproperties.com" class="font-semibold underline" style="color: #FF6B4A;">info@growthwaveproperties.com</a>.
        </p>

        <div class="mt-10 p-5 rounded-lg border" style="background: #f9fafb; border-color: #e5e7eb;">
          <p class="text-sm" style="color: #718EA7;">
            <strong style="color: #595959;">Note:</strong> These terms are being expanded into a full legal agreement. For any questions in the meantime, please contact us directly.
          </p>
        </div>

      </div>
    </div>
  </section>

  <Footer brand="properties" />
</BaseLayout>
