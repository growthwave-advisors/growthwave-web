---
/**
 * GrowthWave Properties - About Page
 * ===================================
 * Updated: January 2026
 * 
 * Design Decision: Option 6 (Stats Hero)
 * - Clean, institutional presentation
 * - Stats as dominant visual element
 * - Regional badge instead of map
 * 
 * Note: Uses inline styles for brand colors to ensure rendering
 * regardless of Tailwind config. Once colors are added to 
 * tailwind.config.js, these can be converted to utility classes.
 * 
 * @see Website_Design_System_STRATEGY.md
 */
import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';

// Brand Colors (matching your design system)
const colors = {
  coral: '#FF6B4A',
  coralLight: '#ff8a6b',
  coralBg: '#fff5f3',
  coralGlassBg: 'rgba(255,107,74,0.15)',
  coralGlassBgLight: 'rgba(255,107,74,0.08)',
  ocean: '#265077',
  midnight: '#022140',
  gray50: '#f9fafb',
  gray100: '#f3f4f6',
  gray500: '#6b7280',
  gray600: '#4b5563',
};

// UPDATED STATS - McKinsey-style institutional language
const stats = [
  { 
    value: '15', 
    label: 'Years in Financial Services',
    sublabel: 'Banking & technology leadership'
  },
  { 
    value: 'Deep', 
    label: 'Institutional Expertise',
    sublabel: 'Executive-level experience'
  },
  { 
    value: 'Enterprise', 
    label: 'Grade Technology',
    sublabel: 'Data-driven analysis & reporting'
  },
];

const philosophyItems = [
  { 
    title: 'Data-Driven Decisions', 
    desc: 'Every deal is analyzed with enterprise-grade tools and conservative assumptions. We stress-test for worst-case scenarios.' 
  },
  { 
    title: 'Technology-Enabled Operations', 
    desc: 'From automated investor reporting to AI-powered market analysis, we leverage technology for competitive advantage.' 
  },
  { 
    title: 'Conservative Underwriting', 
    desc: 'We assume 7% vacancy, $450/unit annual capex reserves, and never underwrite to pro forma rents at acquisition.' 
  },
  { 
    title: 'Long-Term Wealth Building', 
    desc: 'Our 2-5 year hold periods and 1031 exchange strategy focus on compounding wealth, not quick flips.' 
  },
];
---

<BaseLayout
  brand="properties"
  title="About GrowthWave Properties | Technology Meets Real Estate Expertise"
  description="GrowthWave Properties combines 15 years of financial services expertise with professional multifamily investment training. Deep institutional expertise, enterprise-grade technology."
>
  <Header brand="properties" currentPath="/properties/about" />

  <main>
    <!-- ============================================
         HERO SECTION: OPTION 6 (STATS HERO)
         - Centered headline with large stat cards
         - Clean, institutional, McKinsey-style
         - Regional badge at bottom
         ============================================ -->
    <section class="w-full" style={`background-color: ${colors.gray50};`}>
      <div class="max-w-7xl mx-auto px-4 lg:px-8 py-16 lg:py-24">
        
        <!-- Centered Headline -->
        <div class="text-center mb-12">
          <h1 
            class="text-3xl lg:text-4xl font-bold mb-6 leading-tight"
            style={`color: ${colors.midnight};`}
          >
            Technology Meets Real Estate Expertise
          </h1>
          <p class="text-base lg:text-lg max-w-3xl mx-auto" style={`color: ${colors.gray600};`}>
            GrowthWave Properties combines 15 years of financial services experience 
            with professional multifamily investment training to deliver institutional-quality 
            deals at a smaller scale.
          </p>
        </div>
        
        <!-- Stats Cards with Glass Icons -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 max-w-4xl mx-auto">
          <!-- Stat 1: Years in Financial Services -->
          <div 
            class="text-center p-6 lg:p-8 rounded-xl bg-white border"
            style="border-color: #e5e7eb; box-shadow: 0 4px 20px rgba(0,0,0,0.06);"
          >
            <div 
              class="w-14 h-14 rounded-xl mx-auto mb-4 flex items-center justify-center"
              style={`background: linear-gradient(135deg, ${colors.coralGlassBg} 0%, ${colors.coralGlassBgLight} 100%); border: 1px solid rgba(255,107,74,0.25); box-shadow: 0 4px 16px rgba(255,107,74,0.15);`}
            >
              <!-- Landmark/Bank Icon -->
              <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#FF6B4A" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="3" y1="22" x2="21" y2="22"></line>
                <line x1="6" y1="18" x2="6" y2="11"></line>
                <line x1="10" y1="18" x2="10" y2="11"></line>
                <line x1="14" y1="18" x2="14" y2="11"></line>
                <line x1="18" y1="18" x2="18" y2="11"></line>
                <polygon points="12 2 20 7 4 7"></polygon>
              </svg>
            </div>
            <div 
              class="text-4xl lg:text-[44px] font-bold mb-1"
              style={`color: ${colors.coral};`}
            >
              15+
            </div>
            <div 
              class="text-base font-semibold mb-1"
              style={`color: ${colors.midnight};`}
            >
              Years Financial Services
            </div>
            <div class="text-sm text-gray-500">Banking & technology leadership</div>
          </div>
          
          <!-- Stat 2: Institutional Expertise -->
          <div 
            class="text-center p-6 lg:p-8 rounded-xl bg-white border"
            style="border-color: #e5e7eb; box-shadow: 0 4px 20px rgba(0,0,0,0.06);"
          >
            <div 
              class="w-14 h-14 rounded-xl mx-auto mb-4 flex items-center justify-center"
              style={`background: linear-gradient(135deg, ${colors.coralGlassBg} 0%, ${colors.coralGlassBgLight} 100%); border: 1px solid rgba(255,107,74,0.25); box-shadow: 0 4px 16px rgba(255,107,74,0.15);`}
            >
              <!-- Layers Icon -->
              <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#FF6B4A" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polygon points="12 2 2 7 12 12 22 7 12 2"></polygon>
                <polyline points="2 17 12 22 22 17"></polyline>
                <polyline points="2 12 12 17 22 12"></polyline>
              </svg>
            </div>
            <div 
              class="text-4xl lg:text-[44px] font-bold mb-1"
              style={`color: ${colors.coral};`}
            >
              Deep
            </div>
            <div 
              class="text-base font-semibold mb-1"
              style={`color: ${colors.midnight};`}
            >
              Institutional Expertise
            </div>
            <div class="text-sm text-gray-500">Executive-level experience</div>
          </div>
          
          <!-- Stat 3: Enterprise Grade Technology -->
          <div 
            class="text-center p-6 lg:p-8 rounded-xl bg-white border"
            style="border-color: #e5e7eb; box-shadow: 0 4px 20px rgba(0,0,0,0.06);"
          >
            <div 
              class="w-14 h-14 rounded-xl mx-auto mb-4 flex items-center justify-center"
              style={`background: linear-gradient(135deg, ${colors.coralGlassBg} 0%, ${colors.coralGlassBgLight} 100%); border: 1px solid rgba(255,107,74,0.25); box-shadow: 0 4px 16px rgba(255,107,74,0.15);`}
            >
              <!-- Server Icon -->
              <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#FF6B4A" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="2" y="2" width="20" height="8" rx="2" ry="2"></rect>
                <rect x="2" y="14" width="20" height="8" rx="2" ry="2"></rect>
                <line x1="6" y1="6" x2="6.01" y2="6"></line>
                <line x1="6" y1="18" x2="6.01" y2="18"></line>
              </svg>
            </div>
            <div 
              class="text-4xl lg:text-[44px] font-bold mb-1"
              style={`color: ${colors.coral};`}
            >
              Enterprise
            </div>
            <div 
              class="text-base font-semibold mb-1"
              style={`color: ${colors.midnight};`}
            >
              Grade Technology
            </div>
            <div class="text-sm text-gray-500">Data-driven analysis & reporting</div>
          </div>
        </div>
        
        <!-- Regional Badge -->
        <div class="mt-10 lg:mt-12 text-center">
          <span 
            class="inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm lg:text-base font-medium"
            style={`background-color: ${colors.coralBg}; color: ${colors.coral};`}
          >
            <!-- Map Pin Icon -->
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
            Active in high-growth Midwest & Southern markets
          </span>
        </div>
        
      </div>
    </section>

    <!-- ============================================
         INVESTMENT PHILOSOPHY SECTION
         ============================================ -->
    <section class="w-full bg-white">
      <div class="max-w-4xl mx-auto px-4 lg:px-8 py-12 lg:py-16">
        <h2 
          class="text-2xl lg:text-3xl font-bold text-center mb-10 lg:mb-12"
          style={`color: ${colors.midnight};`}
        >
          Our Investment Philosophy
        </h2>
        <div class="space-y-6 lg:space-y-8">
          {philosophyItems.map((item, i) => (
            <div class="flex gap-4 lg:gap-6 items-start">
              <!-- Number Circle -->
              <div 
                class="w-10 h-10 lg:w-12 lg:h-12 rounded-full flex items-center justify-center shrink-0"
                style={`background-color: ${colors.coral};`}
              >
                <span class="text-white font-bold text-base lg:text-lg">{i + 1}</span>
              </div>
              <!-- Content -->
              <div>
                <h3 
                  class="text-lg lg:text-xl font-semibold mb-2"
                  style={`color: ${colors.ocean};`}
                >
                  {item.title}
                </h3>
                <p 
                  class="text-base lg:text-lg"
                  style={`color: ${colors.gray600};`}
                >
                  {item.desc}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- ============================================
         CTA SECTION
         - Coral gradient background
         - White text and buttons
         ============================================ -->
    <section 
      class="w-full"
      style={`background: linear-gradient(to right, ${colors.coral}, ${colors.coralLight});`}
    >
      <div class="max-w-4xl mx-auto px-4 lg:px-8 py-16 lg:py-24 text-center">
        <h2 class="text-2xl lg:text-3xl font-bold text-white mb-4">
          Ready to Build Your Real Estate Portfolio?
        </h2>
        <p class="text-base lg:text-lg text-white/90 mb-8 max-w-2xl mx-auto">
          Join investors who are creating generational wealth through 
          strategic multifamily acquisitions across high-growth regional markets.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <!-- Primary Button (White) -->
          <a 
            href="/properties/contact" 
            class="px-6 lg:px-8 py-3 lg:py-4 rounded-lg font-semibold text-base lg:text-lg bg-white transition-colors hover:bg-gray-50"
            style={`color: ${colors.coral};`}
          >
            Join Investor List
          </a>
          <!-- Secondary Button (Outlined) -->
          <a 
            href="/properties/contact" 
            class="px-6 lg:px-8 py-3 lg:py-4 rounded-lg font-semibold text-base lg:text-lg text-white border-2 border-white transition-colors hover:bg-white/10"
          >
            Schedule a Call
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer brand="properties" />
</BaseLayout>
