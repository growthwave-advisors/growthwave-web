---
// Footer.astro - Brand-aware footer component
interface Props {
  brand: 'properties' | 'capital' | 'advisors';
}

const { brand } = Astro.props;
const currentYear = new Date().getFullYear();

const brandConfig = {
  properties: {
    name: 'GrowthWave Properties',
    tagline: 'Building Wealth Through Real Estate',
    description: 'Strategic multifamily partnerships in the Midwest.',
  },
  capital: {
    name: 'GrowthWave Capital',
    tagline: 'Fueling Your Business Growth',
    description: 'Business financing for real estate investors.',
  },
  advisors: {
    name: 'GrowthWave Advisors',
    tagline: 'Integrated Financial Services for Real Estate Investors',
    description: 'Credit optimization, business financing, and real estate investments—all in one platform.',
  },
};

const config = brandConfig[brand];
---

<footer style="background-color: #022140; color: #ffffff; margin-top: auto;">
  <div class="container-custom" style="padding-top: 3rem; padding-bottom: 3rem;">
    <!-- Main Footer Content -->
    <div style="display: grid; grid-template-columns: 1fr; gap: 2rem; margin-bottom: 2rem;">
      <!-- Brand Column -->
      <div style="grid-column: span 2;">
        <h3 style="font-size: 1.5rem; font-weight: 700; color: #ffffff; margin-bottom: 0.5rem; font-family: 'Outfit', sans-serif;">
          {config.name}
        </h3>
        <p style="color: #d1d5db; margin-bottom: 0.75rem; font-weight: 500; font-family: 'Outfit', sans-serif;">
          {config.tagline}
        </p>
        <p style="color: #9ca3af; font-size: 0.875rem; font-family: 'Outfit', sans-serif;">
          {config.description}
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 style="font-weight: 600; color: #ffffff; margin-bottom: 1rem; font-family: 'Outfit', sans-serif;">
          Quick Links
        </h4>
        <ul style="display: flex; flex-direction: column; gap: 0.5rem;">
          <li>
            <a 
              href={`/${brand}/about`}
              style="color: #d1d5db; font-size: 0.875rem; transition: color 200ms; text-decoration: none; font-family: 'Outfit', sans-serif;"
              onmouseover="this.style.color='#ffffff'"
              onmouseout="this.style.color='#d1d5db'"
            >
              About
            </a>
          </li>
          {brand === 'properties' && (
            <>
              <li>
                <a 
                  href="/properties/approach"
                  style="color: #d1d5db; font-size: 0.875rem; transition: color 200ms; text-decoration: none; font-family: 'Outfit', sans-serif;"
                  onmouseover="this.style.color='#ffffff'"
                  onmouseout="this.style.color='#d1d5db'"
                >
                  Investment Approach
                </a>
              </li>
              <li>
                <a 
                  href="/properties/portfolio"
                  style="color: #d1d5db; font-size: 0.875rem; transition: color 200ms; text-decoration: none; font-family: 'Outfit', sans-serif;"
                  onmouseover="this.style.color='#ffffff'"
                  onmouseout="this.style.color='#d1d5db'"
                >
                  Portfolio
                </a>
              </li>
            </>
          )}
          {brand === 'capital' && (
            <li>
              <a 
                href="/capital/services"
                style="color: #d1d5db; font-size: 0.875rem; transition: color 200ms; text-decoration: none; font-family: 'Outfit', sans-serif;"
                onmouseover="this.style.color='#ffffff'"
                onmouseout="this.style.color='#d1d5db'"
              >
                Services
              </a>
            </li>
          )}
          {brand === 'advisors' && (
            <>
              <li>
                <a 
                  href="/advisors/companies"
                  style="color: #d1d5db; font-size: 0.875rem; transition: color 200ms; text-decoration: none; font-family: 'Outfit', sans-serif;"
                  onmouseover="this.style.color='#ffffff'"
                  onmouseout="this.style.color='#d1d5db'"
                >
                  Our Companies
                </a>
              </li>
              <li>
                <a 
                  href="/advisors/flywheel"
                  style="color: #d1d5db; font-size: 0.875rem; transition: color 200ms; text-decoration: none; font-family: 'Outfit', sans-serif;"
                  onmouseover="this.style.color='#ffffff'"
                  onmouseout="this.style.color='#d1d5db'"
                >
                  Investor Success Flywheel™
                </a>
              </li>
            </>
          )}
          <li>
            <a 
              href={`/${brand}/contact`}
              style="color: #d1d5db; font-size: 0.875rem; transition: color 200ms; text-decoration: none; font-family: 'Outfit', sans-serif;"
              onmouseover="this.style.color='#ffffff'"
              onmouseout="this.style.color='#d1d5db'"
            >
              Contact
            </a>
          </li>
        </ul>
      </div>

      <!-- GrowthWave Ecosystem -->
      <div>
        <h4 style="font-weight: 600; color: #ffffff; margin-bottom: 1rem; font-family: 'Outfit', sans-serif;">
          GrowthWave Ecosystem
        </h4>
        <ul style="display: flex; flex-direction: column; gap: 0.5rem;">
          {brand !== 'advisors' && (
            <li>
              <a 
                href="https://growthwaveadvisors.com"
                style="color: #d1d5db; font-size: 0.875rem; transition: color 200ms; text-decoration: none; font-family: 'Outfit', sans-serif;"
                onmouseover="this.style.color='#ffffff'"
                onmouseout="this.style.color='#d1d5db'"
              >
                GrowthWave Advisors
              </a>
            </li>
          )}
          {brand !== 'properties' && (
            <li>
              <a 
                href="https://growthwaveproperties.com"
                style="color: #d1d5db; font-size: 0.875rem; transition: color 200ms; text-decoration: none; font-family: 'Outfit', sans-serif;"
                onmouseover="this.style.color='#ffffff'"
                onmouseout="this.style.color='#d1d5db'"
              >
                GrowthWave Properties
              </a>
            </li>
          )}
          {brand !== 'capital' && (
            <li>
              <a 
                href="https://growthwavecapital.com"
                style="color: #d1d5db; font-size: 0.875rem; transition: color 200ms; text-decoration: none; font-family: 'Outfit', sans-serif;"
                onmouseover="this.style.color='#ffffff'"
                onmouseout="this.style.color='#d1d5db'"
              >
                GrowthWave Capital
              </a>
            </li>
          )}
          <li>
            <a 
              href="https://creditsculpt.com"
              style="color: #d1d5db; font-size: 0.875rem; transition: color 200ms; text-decoration: none; font-family: 'Outfit', sans-serif;"
              onmouseover="this.style.color='#ffffff'"
              onmouseout="this.style.color='#d1d5db'"
            >
              Credit Sculpt Services
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div style="border-top: 1px solid #374151; padding-top: 2rem;">
      <div style="display: flex; flex-direction: column; align-items: center; gap: 1rem; margin-bottom: 1.5rem;">
        <p style="color: #9ca3af; font-size: 0.875rem; text-align: center; font-family: 'Outfit', sans-serif;">
          © {currentYear} GrowthWave Advisors LLC. All rights reserved.
        </p>
        <div style="display: flex; gap: 1.5rem;">
          <a 
            href="#"
            style="color: #9ca3af; font-size: 0.875rem; transition: color 200ms; text-decoration: none; font-family: 'Outfit', sans-serif;"
            onmouseover="this.style.color='#ffffff'"
            onmouseout="this.style.color='#9ca3af'"
          >
            Privacy Policy
          </a>
          <a 
            href="#"
            style="color: #9ca3af; font-size: 0.875rem; transition: color 200ms; text-decoration: none; font-family: 'Outfit', sans-serif;"
            onmouseover="this.style.color='#ffffff'"
            onmouseout="this.style.color='#9ca3af'"
          >
            Terms of Service
          </a>
        </div>
      </div>

      <!-- Legal Disclaimer -->
      <p style="color: #6b7280; font-size: 0.75rem; text-align: center; font-family: 'Outfit', sans-serif;">
        {brand === 'properties' && 
          'Investment opportunities subject to availability and qualification. Past performance does not guarantee future results. All investments carry risk.'}
        {brand === 'capital' && 
          'GrowthWave Capital provides financing consulting and education services; we are not a lender or broker. Approval and terms subject to underwriting criteria.'}
        {brand === 'advisors' && 
          'Credit Sculpt Services operates under the Credit Repair Organizations Act (CROA). Investment opportunities are subject to qualification and accreditation requirements.'}
      </p>
    </div>
  </div>
</footer>

<style>
  @media (min-width: 768px) {
    footer > div > div:first-child {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    footer > div > div:first-child {
      grid-template-columns: 2fr 1fr 1fr;
    }
    
    footer > div > div:nth-child(2) > div {
      flex-direction: row;
      justify-content: space-between;
    }
    
    footer > div > div:nth-child(2) p:first-child {
      text-align: left;
    }
    
    footer > div > div:last-child p {
      text-align: left;
    }
  }
</style>
